@model HospitalManagerWebApp.Models.Schedule

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 font-text">Delete Doctor Schedule Details</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8  mb-3">
        <div class="row">
            <div class="card-body border border-dark text-center col-md-12 mb-2">
                <h4 class="card-title">@Model.Doctor.DoctorName</h4>
                <p class="card-text">@Model.OPDName</p>
                <p class="card-text">@Model.Location</p>
                <p class="card-text">@Model.OPDDays</p>
                <div class="col-md-12 text-center mb-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ScheduleID" />
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Confirm Delete</button>
                    </form>
                </div>
            </div>
        </div>        
    </div>
    <div class="col-md-2"></div>
</div>