@model HospitalManagerWebApp.Models.Schedule

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4 font-text">Edit Doctor Schedule</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleID" />
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OPDName" class="control-label"></label>
                <input asp-for="OPDName" class="form-control" />
                <span asp-validation-for="OPDName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OPDDays" class="control-label"></label>
                <input asp-for="OPDDays" class="form-control" />
                <span asp-validation-for="OPDDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Schedule Details" class="btn btn-dark btn-block" />
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
