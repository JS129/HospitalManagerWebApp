@model IEnumerable<HospitalManagerWebApp.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4 font-text">All Departments <a asp-action="Create" class="btn btn-dark">Add New Department</a></h1>    
</div>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card-body border border-dark col-md-12 mb-2">
                <h4 class="card-title">@item.DepartmentName</h4>
                <div class="row">
                    <div class="col-md-6 text-center">
                        <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.DepartmentID"><i class="fa fa-edit"></i> Edit</a>
                    </div>
                    <div class="col-md-6 text-center">
                        <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.DepartmentID"><i class="fa fa-trash"></i> Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>