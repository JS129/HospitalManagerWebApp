@page
@model RegisterClerkModel
@{
    ViewData["Title"] = "Register New Clerk";
}
<div class="text-center">
    <h1 class="display-4 font-text">Add New Clerk</h1>
</div>
<hr />
<div class="row" style="margin-bottom:200px">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block btn-dark"><i class="fa fa-paper-plane"></i> Register New Clerk</button>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>