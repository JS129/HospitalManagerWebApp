@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section style="width:50%;margin:0 auto;height:500px;display:flex;justify-content:center;align-items:center;">
    <div class="row shadow border-1 bg-light mt-4">
        <div class="col-md-12">
            <div class="text-center">
                <h1 class="display-4 font-text"><i class="fa fa-hospital-o"> Manager</i></h1>
                <p>Register as Patient</p>
            </div>
        </div>
        <div class="col-md-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="nav-link text-dark font-weight-bold" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in"></i> Log in</a>
                </div>
                <button type="submit" class="btn btn-dark"><i class="fa fa-user-plus"></i> Register</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: #DCDCDC;
    }
</style>
